amends "helix.pkl"

editor{
    mouse = false
    `line-number` = "relative" 
    statusline {
        left = List("version-control")
        mode {
            normal = "NORMAL"
            insert = "INSERT"
            select = "VISUAL"
        }   
    }
    cursorline = true 
    `true-color` = true
    bufferline = "always"
    `color-modes` = true
    `cursor-shape` {
    }
}

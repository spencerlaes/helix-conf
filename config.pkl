amends "helix.pkl"

editor{
    mouse = false
    statusline {
        mode {
            normal = "NORMAL"
            insert = "INSERT"
            select = "VISUAL"
        }   
    }
    cursorline = true 
    `true-color` = true
    bufferline = "always"
    gutters = List("spacer")
    `color-modes` = true
    `cursor-shape` {
        normal = "block"
        insert = "bar"
        select = "underline"
    }
}

amends "helix.pkl"

editor{
    mouse = false
    `line-number` = "relative" 
    statusline {
    left = List("mode", "spinner", "separator", "spacer", "version-control", "read-only-indicator", "file-modification-indicator")
        mode {
            normal = "NORMAL"
            insert = "INSERT"
            select = "VISUAL"
        }   
    }
    cursorline = true 
    `true-color` = true
    bufferline = "always"
    `color-modes` = true
    `cursor-shape` {
        normal = "block"
        insert = "bar"
        select = "underline"
    }
    `auto-pairs` = new {
        `<` = "4"
    }
}
